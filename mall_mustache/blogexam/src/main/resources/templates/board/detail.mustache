{{> /layout/header}}

<!-- 상세보기 -->

<div class="container p-5">
    <!-- 수정삭제버튼 -->
    <div class="d-flex justify-content-between">
        <div>
            <button class="btn btn-secondary me-1">이전</button>
        </div>
        <div class="mb-5">
            <button class="btn btn-warning me-1">수정</button>
            <button class="btn btn-danger">삭제</button>
        </div>
    </div>
    <!-- 게시글내용 -->
    <div>
        <h2><b>제목자리</b></h2>
        <hr />
        <div class="py-5">
            내용입니다
        </div>
    </div>
    <!-- 댓글 -->
    <div class="card mt-3">
        <!-- 댓글등록 -->
        <div class="card-body">
            <form action="/reply/save" method="post">
                <textarea class="form-control" rows="2" name="comment"></textarea>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary mt-3">댓글등록</button>
                </div>
            </form>
        </div>
        <!-- 댓글목록 -->
        <div class="card-footer pt-4">
            <b>댓글리스트</b>
        </div>
        <div class="list-group list-group-flush">
            <!-- 댓글아이템 -->
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-2 me-2 badge bg-success">cos</div>
                    <div>댓글 내용입니다</div>
                </div>
                <!-- 요청을 하면 localhost:8080/reply/1/delete POST로 요청됨-->
                <!-- action에 걸린 주소를 엔드포인트라고 함 -->
                <form action="/reply/1/delete" method="post">
                    <button class="btn"><img width="24" height="24"
                            src="https://img.icons8.com/windows/24/delete-sign.png" alt="delete-sign" /></button>
                </form>
            </div>

            <!-- 댓글아이템 -->
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <div class="px-2 me-2 badge bg-success">ssar</div>
                    <div>댓글 내용입니다</div>
                </div>
                <!-- 요청을 하면 localhost:8080/reply/1/delete POST로 요청됨-->
                <!-- action에 걸린 주소를 엔드포인트라고 함 -->
                <form action="/reply/1/delete" method="post">
                    <button class="btn"><img width="24" height="24"
                            src="https://img.icons8.com/windows/24/delete-sign.png" alt="delete-sign" /></button>
                </form>
            </div>
        </div>
    </div>
</div>
